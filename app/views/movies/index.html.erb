<% provide(:title, "All Movies") %>


<h2 class="mb-6 p-3 text-4xl border-b">All Movies</h2>

    <% if @movies.any? %>
        <section class="space-y-8">
          <% @movies.each do |movie| %>
            <%= render 'movie', movie: movie %>
          <% end %>
        </section>
    <% else %>
        <p>There are no movies!</p>
    <% end %>